<!DOCTYPE html>
<html>
  <head>
    <title>EcoRide</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Custom Styles -->
    <style>
      /* Ecological navbar with green gradient */
      .navbar-eco {
        background: linear-gradient(to right, rgb(118, 150, 86), rgb(139, 69, 19));
}
      .navbar-eco .navbar-brand,
      .navbar-eco .nav-link,
      .navbar-eco .navbar-text {
        color: #ffffff !important;
      }
      .navbar-eco .nav-link:hover {
        color: #dff9fb !important;
      }
      /* Squared button for user dropdown */
      .btn-square {
        width: 40px;
        height: 40px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    </style>
  </head>
  <!-- Make the body a flex container with a minimum viewport height -->
  <body class="d-flex flex-column min-vh-100">
    <!-- Ecological Navbar -->
    <nav class="navbar navbar-expand-lg navbar-eco">
      <div class="container">
        <!-- Left: Brand and Icon -->
        <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
          <img src="<%= asset_path('eco_icon.webp') %>" alt="EcoRide Icon" width="40" height="40" class="me-2">
          <span>EcoRide</span>
        </a>

        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarEco" aria-controls="navbarEco" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Right: User Dropdown Menu -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarEco">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btn btn-square btn-outline-light" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-person-fill"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                  <li>
                    <span class="dropdown-item-text">
                      <strong><%= current_user.email %></strong><br>
                      Credits: <%= current_user.credits %>
                    </span>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "My Trips", trips_path, class: "dropdown-item" %></li>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign in", new_user_session_path, class: "nav-link btn btn-outline-light" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content: Make it flex-fill so it takes the available space -->
    <main class="flex-fill">
      <div class="container mt-4">
        <%= yield %>
      </div>
    </main>

    <!-- Footer: Always sticks to the bottom -->
    <footer class="bg-light py-3 mt-4 border-top">
      <div class="container text-center">
        <p class="mb-0">
          EcoRide &copy; <%= Time.current.year %> |
          <a href="/contact" class="text-decoration-none">Contact</a> |
          <a href="/mentions-legales" class="text-decoration-none">Mentions LÃ©gales</a>
        </p>
      </div>
    </footer>

    <!-- Bootstrap Bundle JS via CDN (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
