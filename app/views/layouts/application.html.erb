<!DOCTYPE html>
<html>
  <head>
    <title>EcoRide</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Custom Ecological Navbar Styles -->
    <style>
      /* Custom navbar with an eco-friendly green gradient */
      .navbar-eco {
        background: linear-gradient(to right, #27ae60, #2ecc71);
      }
      .navbar-eco .navbar-brand,
      .navbar-eco .nav-link,
      .navbar-eco .navbar-text {
        color: #ffffff !important;
      }
      .navbar-eco .nav-link:hover {
        color: #dff9fb !important;
      }
    </style>
  </head>
  <body>
    <!-- Ecological Navbar -->
    <nav class="navbar navbar-expand-lg navbar-eco">
      <div class="container">
        <!-- Left: Brand and Icon -->
        <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
          <img src="<%= asset_path('eco_icon.webp') %>" alt="EcoRide Icon" width="40" height="40" class="me-2">
          <span>EcoRide</span>
        </a>

        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarEco" aria-controls="navbarEco" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Right: User Info -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarEco">
          <ul class="navbar-nav mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="navbar-text">
                  Logged in as: <%= current_user.email %> | Credits: <%= current_user.credits %>
                </span>
              </li>
              <li class="nav-item">
                <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-link nav-link", form_class: "d-inline" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
      <%= yield %>
    </div>

    <!-- Bootstrap Bundle JS via CDN (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
