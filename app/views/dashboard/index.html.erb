<div class="container mt-5">
  <% if current_user.role == "passenger" %>
    <h1>Passenger Dashboard</h1>
    <h2>Your Bookings</h2>
    <% if @bookings.any? %>
      <ul class="list-group">
        <% @bookings.each do |booking| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              Trip from <strong><%= booking.trip.start_city %></strong> to <strong><%= booking.trip.end_city %></strong> on
              <%= booking.trip.start_time.strftime("%Y-%m-%d %H:%M") %>
            </div>
            <div>
              <%= button_to "Cancel Booking", passenger_booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel your booking?" }, class: "btn btn-danger btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="alert alert-info mt-3">
        You have no bookings at the moment.
      </div>
    <% end %>
  <% else %>
    <h1>Driver Dashboard</h1>
    <h2>Your Trips</h2>
    <% if @trips.any? %>
      <ul class="list-group">
        <% @trips.each do |trip| %>
          <li class="list-group-item">
            Trip from <strong><%= trip.start_city %></strong> to <strong><%= trip.end_city %></strong> on
            <%= trip.start_time.strftime("%Y-%m-%d %H:%M") %>
            <!-- Optionally, add links to edit or view more details -->
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="alert alert-info mt-3">
        You haven't created any trips yet.
      </div>
    <% end %>
  <% end %>
</div>
