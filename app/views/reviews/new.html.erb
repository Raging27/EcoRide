<div class="container mt-4">
  <h1 class="mb-4 text-center">Laisser un avis</h1>

  <%= form_with model: @review, url: trip_reviews_path(@trip), local: true do |f| %>
    <div class="mb-3">
      <%= f.label :rating, "Note (1 Ã  5)" %>
      <%= f.number_field :rating, in: 1..5, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :content, "Votre avis" %>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.submit "Envoyer l'avis", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
