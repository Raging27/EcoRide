<div class="container mt-4">
  <h1 class="mb-4">Détails du Voyage</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h3><%= @trip.start_city %> &rarr; <%= @trip.end_city %></h3>
    </div>
    <div class="card-body">
      <p>
        <strong>Heure de Départ :</strong> <%= @trip.start_time.strftime("%d/%m/%Y %H:%M") %>
      </p>
      <p>
        <strong>Heure d'Arrivée :</strong> <%= @trip.end_time.strftime("%d/%m/%Y %H:%M") %>
      </p>
      <p>
        <strong>Prix :</strong> <%= number_to_currency(@trip.price) %>
      </p>
      <p>
        <strong>Places Disponibles :</strong> <%= @trip.seats_available %>
      </p>
      <p>
        <strong>Statut :</strong> <%= @trip.status %>
      </p>
      <p>
        <strong>Véhicule :</strong>
        <% if @trip.vehicle.present? %>
          <%= @trip.vehicle.brand %> <%= @trip.vehicle.model %>
          <% if @trip.vehicle.electric? %>
            (Électrique)
          <% else %>
            (Conventionnel)
          <% end %>
        <% else %>
          Non spécifié
        <% end %>
      </p>
      <% if user_signed_in? && current_user.role == "passenger" && @trip.seats_available > 0 %>
        <div class="mt-3">
          <%= button_to "Réserver ce voyage", trip_passenger_bookings_path(@trip), method: :post, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to "Retour aux voyages", trips_path, class: "btn btn-secondary" %>
</div>


<% if user_signed_in? && current_user.role == "passenger" %>
  <% if current_user.passenger_bookings.exists?(trip_id: @trip.id) %>
    <% booking = current_user.passenger_bookings.find_by(trip_id: @trip.id) %>
    <%= button_to "Cancel Booking", passenger_booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel your booking?" } %>
  <% else %>
    <%= button_to "Book Trip", trip_passenger_bookings_path(@trip), method: :post %>
  <% end %>
<% else %>
  <%= link_to "Sign in to book", new_user_session_path %>
<% end %>

<%= link_to "Back to Trips", trips_path %>
