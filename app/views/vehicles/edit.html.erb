<div class="container mt-4">
  <h1>Edit Vehicle</h1>

  <%= form_with model: @vehicle, local: true do |form| %>
    <% if @vehicle.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
        <ul>
          <% @vehicle.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :plate_number, class: "form-label" %>
      <%= form.text_field :plate_number, class: "form-control", 
          pattern: "[A-Z0-9-]+",
          title: "Only uppercase letters, numbers, and hyphens allowed",
          required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :date_first_registration, "First Registration Date", class: "form-label" %>
      <%= form.date_field :date_first_registration, class: "form-control",
          max: Date.current,
          required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :brand, class: "form-label" %>
      <%= form.text_field :brand, class: "form-control",
          minlength: 2, maxlength: 50,
          required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :model, class: "form-label" %>
      <%= form.text_field :model, class: "form-control",
          minlength: 2, maxlength: 50,
          required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :color, class: "form-label" %>
      <%= form.text_field :color, class: "form-control",
          minlength: 2, maxlength: 30,
          required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :electric, "Is this vehicle electric?", class: "form-label" %>
      <%= form.check_box :electric, class: "form-check-input" %>
    </div>

    <div>
      <%= form.submit "Update Vehicle", class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Back to Vehicles", vehicles_path, class: "btn btn-secondary" %>
  </div>
</div>
